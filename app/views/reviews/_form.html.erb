<div class="col-md-4 col-md-offset-4">
    <%= simple_form_for([@product, @product.reviews.build]) do |f|%>
        <h3>
            <div class=" clearfix ">
                <div id="star-period">新鲜： </div>
            </div>
            <div class=" clearfix">
                <div id="star-servic">外观： </div>
            </div>
            <div class="clearfix">
                <div id="star-price">价格： </div>
            </div>
        </h3>
        <div class="form-group">
            <%= f.input :body, label: "内容", input_html: { class: "form-control"} %>
        </div>
        <div class="form-actions">
            <%= f.submit "提交", disable_with: "Submiting...", class: "g-btn pl15 pr15 mt20 ml20 tc col-red f20 bg-red bc"%>
        </div>
    <% end %>
</div>
