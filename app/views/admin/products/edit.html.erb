<h1>Edit a product</h1>
<%= simple_form_for [:admin, @product] do |p| %>
    <div class="group">
        <%= p.input :title,:label => "品名"%>
    </div>
    <div class="group">
        <%= p.input :description, :label => "叙述" %>
    </div>
    <div class="group">
        <%= p.input :quantity, :label => "库存" %>
    </div>
    <div class="group">
        <%= p.input :price, :label => "价格" %>
    </div>
    <div class="group">
        <%= p.select :category_id, @categories%>
    </div>
    <% if @product.photos.present? %>
        <span>目前商品圖</span> <br>
        <% @product.photos.each do |p| %>
            <%= image_tag p.avatar.thumb.url %><br>
        <% end %>
    <% end %>
    <div class="group">
        <%= p.label :avatar %><br>
        <%= p.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
    </div>
    <%= p.submit "Submit" %>
<% end %>
