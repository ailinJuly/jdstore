<div class="productDetail">
    <div class="productDetail-left bg-color11">
        <div class="productDetail-left-bigImage bg-color13">
            <div class="tab-content">
                <% if @product.image.present? %>
                    <%= image_tag(@product.image.medium.url, class:"thumbnail") %>
                <% else %>
                    <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="productDetail-right bg-color12">
        <h3 class="product-title"><%= @product.title %></h3>
        <div class="rating">
            <div class="stars">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </div>
        </div>
        <p class="product-description"><%=@product.description %></p>
        <h3 class="price1">current price: <span>￥<%= @product.price %></span></h3>
        <div class="action" style="width:200px;height:200px">
            <div class="add-to-cart" style="float:left;margin-right:0.05em">
                <% if @product.quantity.present? && @product.quantity > 0 %>
                    <%= button_to("加入购物车", add_to_cart_product_path(@product), :method => :post) %>
                <% else %>
                    对不起，此商品已经下架！
                <% end %>
            </div>
            <div class="like" style="float:right">
                <% if current_user && current_user.is_favorite_of?(@product) %>
                    <%= button_to('取消收藏'.html_safe, favorite_product_path(@product, type: "unfavorite"), :method => :put) %>
                <% else %>
                    <%= button_to('添加收藏'.html_safe, favorite_product_path(@product, type: "favorite"), method: :put) %>
                <% end %>
            </div>
        </div>
    </div>
</div>
