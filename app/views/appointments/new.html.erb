<div class="login_register_sub appoint-detail">
    <h2 style="center">请留下你的预约信息</h2>
    <div class="personality">10秒预约,免费获取专属客户经理服务 </div>
    <%= simple_form_for @appointment do |ap| %>
        <div class="login_register_su1">
            <div style="float:left">&nbsp;&nbsp;姓名：</div>
            <div class="input">  <%= ap.input :name, placeholder: '请输入您的姓名', autofocus: true, input_html: { class: "form-control"} %>
            </div>
        </div>
        <%= ap.input :phone, label:'手机号码', placeholder:"请输入您的电话" %>
        <div class="form-actions text-center" style="margin-top: 50px;">
            <%= ap.submit "立即预约", data: { disable_with: "Submitting..." }%>
        </div>
    <% end %>
</div>
