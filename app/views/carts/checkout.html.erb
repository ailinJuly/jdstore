<div class="row">
    <div class="col-md-12">
        <h3 class="detail"> 购物明细 </h3>
        <table class="table table-bordered col-md-6">
            <thead>
                <tr>
                    <th width="80%">商品明细</th>
                    <th>单价</th>
                    <th>数量</th>
                </tr>
            </thead>
            <tbody>
                <% current_cart.cart_items.each do |cart_item| %>
                    <tr>
                        <td>
                            <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
                        </td>
                        <td>
                            <%= cart_item.product.price %>
                        </td>
                        <td>
                            <%= cart_item.quantity %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <div class="total clearfix">
            <span class="pull-right">
                总计 <%= render_cart_total_price(current_cart) %> CNY
            </span>
        </div>
        <hr>
        <h3 class="order"> 订单资讯 </h3>
        <div class="order-form">
            <%= simple_form_for @order do |f| %>
              <div class="order-form-left">
                  <legend> 订购人</legend>
                  <div class="input">
                      <%= f.input :billing_name  %>
                  </div>
                  <div class="input">
                      <%= f.input :billing_address  %>
                  </div>
              </div>

              <div class="order-form-right">
                 <legend> 收货人</legend>
                  <div class="input">
                    <%= f.input :shipping_name  %>
                  </div>
                  <div class="input">
                    <%= f.input :shipping_address  %>
                  </div>
              </div>


              <!-- <div class="checkout">
                  <%= f.submit "生成订单", class: "btn btn-lg pull-right",
                     data: { disable_with: "Submitting..." } %>

              </div> -->
              <td colspan="2" class="text-center">
                  <button name="checkout" type="submit" value="true" class="btn-checkout btn btn-raised btn-info btn-round">
                        生成订单
                            <div class="ripple-container"></div>
                  </button>
            </td>
                <% end %>
          </div>

        </div>
    </div>
